"""

Gera√ß√£o de alerta de risco de dividendos
usando Machine Learning n√£o supervisionado (Isolation Forest)
"""

import pandas as pd
import numpy as np
from sklearn.preprocessing import RobustScaler
from sklearn.ensemble import IsolationForest


def gerar_alerta_dividendo(df):
    vars_risco = [
        "DIVIDEND YIELD",
        "LIQUIDEZ DI√ÅRIA (R$)",
        "P/VP",
        "NUM. COTISTAS"
    ]

    df_risco = df[vars_risco].copy()
    df_risco = df_risco.replace([np.inf, -np.inf], np.nan).dropna()

    scaler = RobustScaler()
    X_scaled = scaler.fit_transform(df_risco)

    iso = IsolationForest(
        n_estimators=300,
        contamination=0.15,  # ~15% considerados alto risco
        random_state=42
    )

    df_risco["SCORE_RISCO"] = iso.fit_predict(X_scaled)
    df_risco["ANOMALIA_SCORE"] = iso.decision_function(X_scaled)

    df_risco["ALERTA_DIVIDENDO"] = pd.qcut(
        df_risco["ANOMALIA_SCORE"],
        q=[0, 0.2, 0.6, 1.0],
        labels=["üî¥ Alto Risco", "üü° Risco Moderado", "üü¢ Baixo Risco"]
    )

    df_out = df.loc[df_risco.index].copy()
    df_out["SCORE_RISCO"] = df_risco["ANOMALIA_SCORE"]
    df_out["ALERTA_DIVIDENDO"] = df_risco["ALERTA_DIVIDENDO"]

    return df_out


if __name__ == "__main__":
    df = pd.read_csv("data/processed/fiis_clean.csv")
    df_alerta = gerar_alerta_dividendo(df)
    df_alerta.to_csv("data/processed/fiis_alerta_dividendo.csv", index=False)

"""

Gera√ß√£o de alerta de risco estrutural por setor
usando Isolation Forest e score t√©cnico
"""

import pandas as pd
import numpy as np
from sklearn.preprocessing import RobustScaler, MinMaxScaler
from sklearn.ensemble import IsolationForest


def gerar_alerta_setor(df):
    vars_risco = [
        "DIVIDEND YIELD",
        "LIQUIDEZ DI√ÅRIA (R$)",
        "P/VP",
        "NUM. COTISTAS"
    ]

    setores_alerta = []

    for setor, df_s in df.groupby("SETOR"):
        if len(df_s) < 15:
            continue

        df_risco = df_s[vars_risco].copy()

        for col in vars_risco:
            df_risco[col] = (
                df_risco[col].astype(str)
                .str.replace(".", "", regex=False)
                .str.replace(",", ".", regex=False)
                .str.replace("%", "", regex=False)
                .str.replace("R$", "", regex=False)
            )
            df_risco[col] = pd.to_numeric(df_risco[col], errors="coerce")

        df_risco = df_risco.dropna()
        if len(df_risco) < 10:
            continue

        X = RobustScaler().fit_transform(df_risco)

        iso = IsolationForest(
            n_estimators=200,
            contamination=0.15,
            random_state=42
        )

        score = iso.fit(X).decision_function(X)

        tmp = df_s.loc[df_risco.index].copy()
        tmp["SCORE_RISCO_SETOR"] = score

        tmp["ALERTA_SETOR"] = pd.qcut(
            score,
            q=[0, 0.2, 0.6, 1.0],
            labels=["üî¥ Alto Risco", "üü° M√©dio Risco", "üü¢ Baixo Risco"]
        )

        setores_alerta.append(tmp)

    df_alerta_setor = pd.concat(setores_alerta)

    # SCORE T√âCNICO
    vars_score = [
        "DIVIDEND YIELD",
        "LIQUIDEZ DI√ÅRIA (R$)",
        "NUM. COTISTAS"
    ]

    df_score = df_alerta_setor[vars_score].copy()

    for col in vars_score:
        df_score[col] = (
            df_score[col].astype(str)
            .str.replace(".", "", regex=False)
            .str.replace(",", ".", regex=False)
            .str.replace("%", "", regex=False)
            .str.replace("R$", "", regex=False)
        )
        df_score[col] = pd.to_numeric(df_score[col], errors="coerce")

    df_score = df_score.dropna()
    X_score = MinMaxScaler().fit_transform(df_score)

    df_alerta_setor.loc[df_score.index, "SCORE_TECNICO"] = X_score.mean(axis=1)

    return df_alerta_setor


if __name__ == "__main__":
    df = pd.read_csv("data/processed/fiis_alerta_dividendo.csv")
    df_setor = gerar_alerta_setor(df)
    df_setor.to_csv("data/processed/fiis_alerta_setor.csv", index=False)
