Coleta de dados de Fundos Imobili√°rios brasileiros
Fonte: https://www.fundsexplorer.com.br
"""
import time
import pandas as pd
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from webdriver_manager.chrome import ChromeDriverManager


def coletar_fiis():
    options = Options()
    options.add_argument("--headless")
    options.add_argument("--no-sandbox")
    options.add_argument("--disable-dev-shm-usage")

    driver = webdriver.Chrome(
        service=Service(ChromeDriverManager().install()),
        options=options
    )

    url = "https://www.fundsexplorer.com.br/ranking"
    driver.get(url)

    wait = WebDriverWait(driver, 30)
    wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, "table")))

    time.sleep(3)

    table = driver.find_element(By.CSS_SELECTOR, "table")

    headers = [th.text.strip() for th in table.find_elements(By.CSS_SELECTOR, "thead th")]

    rows = []
    for tr in table.find_elements(By.CSS_SELECTOR, "tbody tr"):
        rows.append([td.text.strip() for td in tr.find_elements(By.CSS_SELECTOR, "td")])

    driver.quit()

    df = pd.DataFrame(rows, columns=headers)
    return df


if __name__ == "__main__":
    df_fiis = coletar_fiis()
    print(f"Total de FIIs coletados: {len(df_fiis)}")
    df_fiis.to_csv("data/raw/fiis_raw.csv", index=False)

"""

Limpeza e prepara√ß√£o dos dados
"""

import pandas as pd
import numpy as np


def limpar_dados(df):
    cols_num = [
        "DIVIDEND YIELD",
        "LIQUIDEZ DI√ÅRIA (R$)",
        "P/VP",
        "NUM. COTISTAS"
    ]

    for col in cols_num:
        df[col] = (
            df[col].astype(str)
            .str.replace(".", "", regex=False)
            .str.replace(",", ".", regex=False)
            .str.replace("%", "", regex=False)
            .str.replace("R$", "", regex=False)
        )
        df[col] = pd.to_numeric(df[col], errors="coerce")

    return df.dropna()


if __name__ == "__main__":
    df = pd.read_csv("data/raw/fiis_raw.csv")
    df_clean = limpar_dados(df)
    df_clean.to_csv("data/processed/fiis_clean.csv", index=False)

